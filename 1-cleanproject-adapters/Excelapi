import org.apache.poi.ss.usermodel.;
import java.io.;

public class ExcelApi {
private Workbook workbook;
public ExcelApi(String filePath) throws IOException {
    try (InputStream inputStream = new FileInputStream(new File(filePath))) {
        workbook = WorkbookFactory.create(inputStream);
    }
}

public void setValue(String sheetName, int row, int column, String value) {
    Sheet sheet = workbook.getSheet(sheetName);
    if (sheet != null) {
        Row sheetRow = sheet.getRow(row);
        if (sheetRow == null) {
            sheetRow = sheet.createRow(row);
        }
        Cell cell = sheetRow.getCell(column);
        if (cell == null) {
            cell = sheetRow.createCell(column);
        }
        cell.setCellValue(value);
    }
}

public void saveToFile(String filePath) throws IOException {
    try (OutputStream outputStream = new FileOutputStream(new File(filePath))) {
        workbook.write(outputStream);
    }
}

// Additional methods for accessing Excel data and performing operations

public String getValue(String sheetName, int row, int column) {
    Sheet sheet = workbook.getSheet(sheetName);
    if (sheet != null) {
        Row sheetRow = sheet.getRow(row);
        if (sheetRow != null) {
            Cell cell = sheetRow.getCell(column);
            if (cell != null) {
                return cell.getStringCellValue();
            }
        }
    }
    return null;
}

public int getRowCount(String sheetName) {
    Sheet sheet = workbook.getSheet(sheetName);
    if (sheet != null) {
        return sheet.getLastRowNum() + 1;
    }
    return 0;
}

// Other methods for data manipulation, formatting, etc.
}
